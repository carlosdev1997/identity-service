{
  "compilerOptions": {
    "target": "ES2022",  // ðŸ‘ˆ Puedes actualizar a ES2022
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,  // ðŸ‘ˆ IMPORTANTE para Inversify

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,  // âœ… Necesario
    "emitDecoratorMetadata": true    // âœ… Necesario
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
