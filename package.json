{
    "name": "identity-service",
    "version": "1.0.0",
    "description": "Identity Service - DDD + Hexagonal Architecture",
    "type": "module",
    "scripts": {
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "sam:start": "sam local start-api --template template.dev.yaml --skip-pull-image --warm-containers EAGER",
        "build": "tsc && cp dist-package.json dist/package.json",
        "build:clean": "rimraf dist && npm run build",
        "layer:prepare": "mkdir -p layer/nodejs && cp layer-package.json layer/nodejs/package.json && cp prisma/schema.prisma layer/nodejs/ && cd layer/nodejs && npm install --omit=dev && npx prisma generate && cd ../.. && bash optimize-layer.sh",
        "layer:clean": "rimraf layer",
        "predeploy:dev": "npm run build:clean && npm run layer:clean && npm run layer:prepare",
        "deploy:dev": "sam build && sam deploy --force-upload"
    },
    "keywords": [
        "ddd",
        "hexagonal",
        "identity",
        "aws",
        "lambda"
    ],
    "author": "CompanyDev",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-cognito-identity-provider": "^3.700.0",
        "@aws-sdk/client-sns": "^3.700.0",
        "@aws-sdk/client-ssm": "^3.700.0",
        "@companydev/shared-toolkit": "^1.0.19",
        "@prisma/client": "^6.1.0",
        "inversify": "^6.0.3",
        "reflect-metadata": "^0.2.2",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.145",
        "@types/node": "^20.17.10",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.4.2",
        "prisma": "^6.1.0",
        "rimraf": "^6.0.1",
        "typescript": "^5.8.0"
    }
}
